<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.parkourspots.view.SpotInfoActivity"
    android:background="@color/light_blue_background">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="wrap_content"
            android:imeOptions="actionDone"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/spotTitleInfoActivity"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false"
            android:hint="Spot title" />

        <EditText
            android:id="@+id/goodForInfoActivity"
            android:layout_alignBottom="@+id/EditText5"
            android:layout_alignLeft="@+id/difficultyInfoActivity"
            android:layout_alignStart="@+id/difficultyInfoActivity"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:imeOptions="actionDone"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false"
            android:hint="good for" />

        <EditText
            android:id="@+id/EditText5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/EditText7"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Good for:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false" />

        <EditText
            android:id="@+id/difficultyInfoActivity"
            android:layout_alignBottom="@+id/EditText7"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:imeOptions="actionDone"
            android:layout_toEndOf="@+id/EditText7"
            android:layout_toRightOf="@+id/EditText7"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false"
            android:hint="difficulty" />

        <EditText
            android:id="@+id/EditText7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/descriptionInfoActivity"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Difficulty:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false" />

        <EditText
            android:gravity="center"
            android:imeOptions="actionDone"
            android:id="@+id/descriptionInfoActivity"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/spotTitleInfoActivity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false"
            android:hint="Description" />

        <EditText
            android:id="@+id/EditText9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/goodForInfoActivity"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Ground material: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false" />

        <EditText
            android:id="@+id/groundMaterialInfoActivity"
            android:layout_alignBottom="@+id/EditText9"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:imeOptions="actionDone"
            android:layout_toEndOf="@+id/EditText9"
            android:layout_toRightOf="@+id/EditText9"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false"
            android:hint="material" />

        <EditText
            android:id="@+id/EditText11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/EditText9"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Size:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false" />

        <EditText
            android:id="@+id/sizeInfoActivity"
            android:layout_alignBottom="@+id/EditText11"
            android:imeOptions="actionDone"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/EditText11"
            android:layout_toRightOf="@+id/EditText11"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false"
            android:hint="size" />

        <ImageView
            android:id="@+id/photo1InfoActivity"
            android:layout_height="300dp"
            android:layout_width="fill_parent"
            android:layout_below="@+id/EditText11"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_camera_big" />
    </RelativeLayout>
</ScrollView>